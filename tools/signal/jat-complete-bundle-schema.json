{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "jat-complete-bundle-schema.json",
  "title": "JAT CompletionBundle",
  "description": "Schema for the JSON payload used by `jat-signal complete` (generated by `jat-complete-bundle`).",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "taskId": {
      "type": "string",
      "description": "Task ID that was completed"
    },
    "agentName": {
      "type": "string",
      "description": "Agent name that completed the task"
    },
    "completionMode": {
      "type": "string",
      "enum": ["review_required", "auto_proceed"],
      "description": "How completion should be handled"
    },
    "nextTaskId": {
      "type": "string",
      "description": "Next task to pick up (auto_proceed only)"
    },
    "nextTaskTitle": {
      "type": "string",
      "description": "Title of next task (auto_proceed only)"
    },
    "summary": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": { "type": "string" },
      "description": "Bullet points of what was accomplished"
    },
    "quality": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tests", "build"],
      "properties": {
        "tests": {
          "type": "string",
          "enum": ["passing", "failing", "none", "skipped"]
        },
        "build": {
          "type": "string",
          "enum": ["clean", "warnings", "errors"]
        },
        "preExisting": {
          "type": "string"
        }
      }
    },
    "humanActions": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title"],
        "properties": {
          "title": { "type": "string", "minLength": 1, "maxLength": 200 },
          "description": { "type": "string", "maxLength": 2000 },
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "suggestedTasks": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["bug", "feature", "task", "chore", "epic"] },
          "title": { "type": "string", "minLength": 1, "maxLength": 200 },
          "description": { "type": "string", "maxLength": 2000 },
          "priority": { "type": "integer", "minimum": 0, "maximum": 4 },
          "reason": { "type": "string", "maxLength": 500 },
          "project": { "type": "string", "pattern": "^[a-z0-9_-]+$" },
          "labels": { "type": "string" },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "crossAgentIntel": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "files": { "type": "array", "items": { "type": "string" } },
        "patterns": { "type": "array", "items": { "type": "string" } },
        "gotchas": { "type": "array", "items": { "type": "string" } }
      }
    },
    "suggestedRename": {
      "type": "string",
      "description": "New title if the task evolved significantly"
    },
    "suggestedLabels": {
      "type": "array",
      "minItems": 1,
      "maxItems": 6,
      "items": { "type": "string" }
    },
    "riskLevel": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "breakingChanges": {
      "type": "array",
      "items": { "type": "string" }
    },
    "documentationNeeds": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["summary", "quality", "suggestedTasks", "suggestedLabels", "riskLevel"]
}

