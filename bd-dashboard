#!/bin/bash
# bd-dashboard - Launch the Beads Task Dashboard
# Part of jomarchy-agent-tools

set -e

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Get the directory where this script is located (resolve symlinks)
SCRIPT_SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SCRIPT_SOURCE" ]; do
    SCRIPT_DIR="$( cd -P "$( dirname "$SCRIPT_SOURCE" )" && pwd )"
    SCRIPT_SOURCE="$(readlink "$SCRIPT_SOURCE")"
    [[ $SCRIPT_SOURCE != /* ]] && SCRIPT_SOURCE="$SCRIPT_DIR/$SCRIPT_SOURCE"
done
SCRIPT_DIR="$( cd -P "$( dirname "$SCRIPT_SOURCE" )" && pwd )"
DASHBOARD_DIR="$SCRIPT_DIR/dashboard"

echo -e "${GREEN}ðŸš€ Beads Task Dashboard Launcher${NC}"
echo ""

# Check if dashboard directory exists
if [ ! -d "$DASHBOARD_DIR" ]; then
    echo -e "${RED}âŒ Error: Dashboard directory not found at $DASHBOARD_DIR${NC}"
    exit 1
fi

cd "$DASHBOARD_DIR"

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}ðŸ“¦ node_modules not found. Running npm install...${NC}"
    npm install
    echo -e "${GREEN}âœ… Dependencies installed${NC}"
    echo ""
fi

# Check if package.json exists
if [ ! -f "package.json" ]; then
    echo -e "${RED}âŒ Error: package.json not found${NC}"
    exit 1
fi

echo -e "${GREEN}ðŸ”§ Starting development server...${NC}"
echo ""

# Create a temporary log file
LOG_FILE="/tmp/bd-dashboard-$$.log"
trap "rm -f $LOG_FILE" EXIT

# Function to monitor dev server output and open browser
open_browser_when_ready() {
    # Wait for the URL to appear in the log
    timeout 30 bash -c "
        while true; do
            if [ -f '$LOG_FILE' ]; then
                # Look for Vite's URL output (more portable regex)
                URL=\$(grep -o 'http://127\.0\.0\.1:[0-9]*' '$LOG_FILE' | head -1)
                if [ ! -z \"\$URL\" ]; then
                    sleep 1  # Give server a moment to fully start

                    # Open browser
                    if command -v xdg-open > /dev/null; then
                        xdg-open \"\$URL\" 2>/dev/null || true
                    elif command -v open > /dev/null; then
                        open \"\$URL\" 2>/dev/null || true
                    else
                        echo -e '${YELLOW}â„¹ï¸  Open your browser to: \$URL${NC}'
                    fi
                    break
                fi
            fi
            sleep 0.5
        done
    " 2>/dev/null || echo -e "${YELLOW}â„¹ï¸  Could not auto-open browser${NC}"
}

# Start browser opener in background
open_browser_when_ready &

# Start the dev server (this blocks until Ctrl+C)
npm run dev 2>&1 | tee "$LOG_FILE"

# Cleanup on exit
echo ""
echo -e "${GREEN}ðŸ‘‹ Dashboard stopped${NC}"
